<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- TABLA: Cliente -->
<hibernate-mapping>
	<!-- Datos de la Tabla: Detalle de los CAMPO
	     nombre de la clase incluyendo el paquete en el que se encuentra   
	--> 
	<class name="datos.Cliente" table="cliente">       
		<!-- Clave:  PRIMARIA 
		     Se usa para indicar la propiedad de la clase que es la clave primaria 
		-->
		<id column="idCliente" name="idCliente">      
			<generator class="identity" />
		</id>
		<!-- *********************
			column:    Contiene el nombre de la columna de la base de datos asociado a la propiedad que
			name:      es el nombre de la propiedad Java y que contiene un nombre que puede ser distinto al 
			           del campo 
			type:      indica el tipo de la propiedad Java, establece el tipo información
			           en Tipos básicos. 
			           (http://www.cursohibernate.es/doku.php?id=unidades:04_claves_primarias_y_tipos_datos:01_tipos_basicos)        
			<property> Se usan para declarar más propiedades Java para ser mapejadas
			           en la base de datos
		-->				
		<property column="apellido" name="apellido" type="string" />
		<property column="nombre" name="nombre" type="string" />
		<property column="dni" name="dni" type="int" />
		<property column="fechaDeNacimiento" name="fechaDeNacimiento" type="LocalDate" />
		<property column="baja" name="baja" type="boolean" />
	</class>
</hibernate-mapping>
